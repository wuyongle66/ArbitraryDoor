<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spring"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spring_background"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="219"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="69"
            />

    <Button
        android:id="@+id/spring_personal_center"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_weight="44"
        android:background="@drawable/shape_spring"
        android:drawableLeft="@drawable/spring_head_portrait"
        android:layout_marginLeft="21dp"
        android:text="个人中心"
        android:textSize="18sp"
        android:paddingLeft="7dp"
        android:textStyle="bold"
        android:textColor="#403F3D"
        android:drawablePadding="2dp"
        android:elevation="20dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />

    <Button
        android:id="@+id/spring_my_mail"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_weight="44"
        android:layout_marginLeft="21dp"
        android:background="@drawable/shape_spring"
        android:drawableLeft="@drawable/spring_mail"
        android:text="我的邮箱"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:paddingLeft="7dp"
        android:textStyle="bold"
        android:textColor="#403F3D"
        android:drawablePadding="2dp"
        android:elevation="20dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            />

    <Button
        android:id="@+id/spring_stress_relaxation"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_weight="44"
        android:layout_marginLeft="21dp"
        android:background="@drawable/shape_spring"
        android:drawableLeft="@drawable/spring_stress_relaxation"
        android:text="解压放松"
        android:textSize="18sp"
        android:paddingLeft="7dp"
        android:textStyle="bold"
        android:textColor="#403F3D"
        android:drawablePadding="2dp"
        android:elevation="20dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spring_window"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="465"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="@drawable/spring_window"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.88"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/spring_cat"
            android:layout_width="128dp"
            android:layout_height="149dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/spring_cat" />
        </RelativeLayout>
    </LinearLayout>

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="202"
        >
    <Button
        android:id="@+id/spring_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@drawable/spring_button"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        >
    </Button>

    <Button
        android:id="@+id/spring_hengxian"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        />
    <RelativeLayout
        android:id="@+id/spring_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/spring_hengxian"
        android:background="@drawable/shape_spring_buttom"
        />
</RelativeLayout>

</LinearLayout>