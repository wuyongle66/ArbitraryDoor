<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/login_background"
    tools:context=".login.Login"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="204"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="98"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="164"
            />
        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="97"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:scaleType="fitXY"
            android:src="@drawable/main_interface1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="163"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="39"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="63"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="275"
            android:orientation="horizontal"
            android:background="@drawable/shape_login"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                />

            <EditText
                android:id="@+id/name_edittext_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="225"
                android:background="@null"
                android:gravity="left|center"
                android:lines="1"
                android:hint="手机号"
                android:textColorHint="#57B1B1B1"
                android:textAllCaps="false"
                android:textColor="#101010"
                android:textStyle="normal"
                android:textSize="38sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="63"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="275"
            android:orientation="horizontal"
            android:background="@drawable/shape_login"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                />

            <EditText
                android:id="@+id/pwd_edittext_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="225"
                android:background="@null"
                android:gravity="left|center"
                android:lines="1"
                android:hint="密码"
                android:textColorHint="#57B1B1B1"
                android:textAllCaps="false"
                android:textColor="#101010"
                android:textStyle="normal"
                android:textSize="38sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="123"
            />
        <Button
            android:id="@+id/forget_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="84"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="忘记密码？"
            android:textColor="#FF777777"
            android:textStyle="normal"
            android:textSize="34sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="217"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="74"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="74"
            />
        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="274"
            android:text="敲门"
            android:textColor="#E9E9E9FF"
            android:textSize="43sp"
            android:background="@drawable/shape_login1"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="49"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="183"
            />
        <Button
        android:id="@+id/register"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="84"
        android:layout_gravity="center"
        android:layout_below="@+id/arbitrary_icon2"
        android:background="@android:color/transparent"
        android:text="注册"
        android:textColor="#FF777777"
        android:textStyle="normal"
        android:textSize="40sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="183"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="152"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="144"
            />
        <Button
            android:id="@+id/versions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="130"
            android:layout_gravity="center"
            android:layout_below="@+id/arbitrary_icon2"
            android:background="@android:color/transparent"
            android:text="版本号：V1.0.2"
            android:textColor="#FF535353"
            android:textSize="35sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="144"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        />
</LinearLayout>