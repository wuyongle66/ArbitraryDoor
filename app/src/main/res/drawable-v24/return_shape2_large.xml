<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#EACA73" />
            <corners
                android:radius="1dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                />
            <size
                android:width="20dp"
                android:height="20dp"
                />
        </shape>
    </item>
    <!--
    argb rgba9CFFFFFF
        android:bottom、
        android:end、
        android:start、
        android:top是距离下右左上的间距
    -->
    <item
        android:bottom="2px"
        android:end="0dp"
        android:start="2px"
        android:top="0dp">
        <shape android:shape="oval">
            <solid android:color="#B2FFFFFF" />
            <corners
                android:radius="1dp"
                />
            <size
                android:width="20dp"
                android:height="20dp"
                />
            <stroke
                android:width="1dp"
                android:color="#F6AE15"
            />

        </shape>
    </item>
</layer-list>

